    <!--TextView to show user turns and winner-->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tvXPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvStatus"
        android:layout_alignBottom="@+id/tvStatus"
        android:layout_alignLeft="@+id/tlGameBoard"
        android:layout_alignStart="@+id/tlGameBoard"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv0Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvStatus"
        android:layout_alignBottom="@+id/tvStatus"
        android:layout_alignEnd="@+id/tlGameBoard"
        android:layout_alignRight="@+id/tlGameBoard"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!--Button to reset game -->
