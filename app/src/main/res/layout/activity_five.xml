        android:id="@+id/bNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tlGameBoard"
        android:layout_alignStart="@+id/tlGameBoard"
        android:layout_below="@+id/tlGameBoard"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="@string/new_game"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!--Button to reset game board-->
    <Button
        android:id="@+id/bReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bNewGame"
        android:layout_alignBottom="@+id/bNewGame"
        android:layout_alignEnd="@+id/tv0Points"
        android:layout_alignRight="@+id/tv0Points"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="@string/reset_game"
